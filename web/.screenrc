# Disable startup message
startup_message off

# Set terminal to xterm-256color
term xterm-256color

# Disable visual bell
vbell off

# Set scrollback buffer
defscrollback 10000

# Enable UTF-8
defutf8 on

# Disable flow control
defflow off

# Set escape key timeout
maptimeout 5

# Disable screen lock
defwritelock off

# Prevent screen from catching Ctrl+S
bind s

# Disable status line completely
hardstatus off

# Disable all messages
msgwait 0
msgminwait 0

# Disable activity monitoring
monitor off