{
  "name": "morphbox",
  "version": "2.0.0",
  "description": "Docker-based AI sandbox for development with Claude integration",
  "bin": {
    "morphbox": "./bin/morphbox.js",
    "morphbox-installer": "./bin/install.js"
  },
  "scripts": {
    "dev": "vite dev --port 8008 --host",
    "dev:ws": "dotenv -e .env.local -- tsx src/lib/server/websocket-server.ts",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "start:terminal": "node server.js --terminal",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "cleanup:claude": "./scripts/cleanup-claude.sh",
    "cleanup:claude:force": "./scripts/cleanup-claude.sh --force",
    "prepare": "npm run build",
    "prepublishOnly": "cp README.npm.md README.md",
    "postpublish": "git checkout README.md"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/kit": "^2.23.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.5",
    "dotenv-cli": "^8.0.0",
    "svelte": "^4.2.20",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.5.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@types/ws": "^8.18.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "better-sqlite3": "^12.2.0",
    "lucide-svelte": "^0.525.0",
    "monaco-editor": "^0.52.2",
    "node-pty": "^1.0.0",
    "ws": "^8.18.3"
  },
  "type": "module",
  "keywords": [
    "morphbox",
    "sandbox",
    "ai",
    "development",
    "docker",
    "container",
    "isolation",
    "claude",
    "installer",
    "wsl2"
  ],
  "author": "MorphBox Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MicahBly/morphbox.git"
  },
  "bugs": {
    "url": "https://github.com/MicahBly/morphbox/issues"
  },
  "homepage": "https://morphbox.iu.dev",
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/",
    "build/",
    "src/",
    "static/",
    "README.npm.md",
    "server.js",
    "morphbox-terminal",
    "package.json",
    "svelte.config.js",
    "vite.config.ts",
    "tsconfig.json"
  ]
}
